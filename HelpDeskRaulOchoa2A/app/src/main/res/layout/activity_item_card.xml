<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".item_card"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreCard"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Titulo"
            android:textColor="#000000"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/txtDescripcionCard"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Descripcion"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtAutorCard"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Autor"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtEmailAutorCard"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="EmailAutor"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtFechaCreacionCard"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="FechaCreacion"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtEstadoCard"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="Estado"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtFechaFinalizadoCard"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="FechaFinalizado"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/imgBorrar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_trash" />

    </LinearLayout>

  </androidx.cardview.widget.CardView>